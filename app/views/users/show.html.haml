.well.span4
  %h3
    = @user.name
    %small#post_count
      total posts (#{@user.microposts.count})
  %img.media-object{:alt => "user", :src => "../assets/user.png", height: '128px', width: '128px'}
  = render 'shared/stats'
  = render 'follow_form' if signed_in?
.span4.offset3
  - if @user.microposts.any?
    = render @microposts
-# = link_to "Click to post", root_url

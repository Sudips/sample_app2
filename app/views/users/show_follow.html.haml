- provide(:title, @title)
.row
  %aside.span4
    %section
      %h1= @user.name
      %span= link_to "view my profile", @user
      %span
        %b Microposts:
        = @user.microposts.count
    %section
      = render 'shared/stats'
      - if @users.any?
  .span8
    %h3= @title
    - if @users.any?
      %ul.users
        = render @users
      = will_paginate
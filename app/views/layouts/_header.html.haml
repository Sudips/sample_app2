%section#headerSection
  .container
    .navbar
      .container
        %button.btn.btn-navbar.active{"data-target" => ".nav-collapse", "data-toggle" => "collapse", :type => "button"}
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        %h1
          %a.brand{:href => root_path}
            %small h2lips
          -# %img.media-object{:alt => "logo-h2lips", :src => "assets/logo.png"}
        .nav-collapse.collapse
        - if signed_in?
          = render_navigation renderer: :bootstrap, context: :user, expand_all: true, level: 1..2
        - else
          = render_navigation renderer: :bootstrap, context: :guest,expand_all: true, level: 1..2